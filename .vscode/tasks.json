{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "${workspaceFolder}/FrontDesk.SharedKernel/FrontDesk.SharedKernel.csproj"
            ],
            "problemMatcher": "$msCompile"
        }, 
        {
            "label": "buildTest",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "${workspaceFolder}/SportsStore.Tests/SportsStore.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "runTest",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/SportsStore.Tests"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}